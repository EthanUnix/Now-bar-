<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Layout for the Now Bar widget overlay -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/now_bar_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/now_bar_background"
        android:padding="8dp">

        <ImageView
            android:id="@+id/now_bar_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_music_note"
            android:background="@drawable/icon_background"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/now_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Now Bar Title" />

            <TextView
                android:id="@+id/now_bar_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#CCCCCC"
                android:textSize="10sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Now Bar Subtitle" />

        </LinearLayout>

        <ImageView
            android:id="@+id/now_bar_action"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_pause"
            android:layout_gravity="center_vertical"
            android:visibility="gone" />

    </LinearLayout>
</resources>
